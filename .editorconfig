# http://editorconfig.org

root = true

[*.{cpp,c,h,asm,txt,src}]
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.yml]
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.json]
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Iterated Dynamics input files
[*.{frm,ifs,key,l,par}]
insert_final_newline = true
indent_style = space
indent_size = 3
trim_trailing_whitespace = true

# "video mode" config files
[*.cfg]
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true
