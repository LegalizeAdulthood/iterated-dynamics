{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "project-name-preset",
      "hidden": true,
      "description": "Sets the project name based on the preset",
      "cacheVariables": {
        "ID_PROJECT_NAME": {
          "type": "STRING",
          "value": "Iterated Dynamics ${presetName}"
        }
      }
    },
    {
      "name": "sibling-preset-build-dir",
      "hidden": true,
      "description": "Use a sibling directory for the build based on the preset name",
      "binaryDir": "${sourceDir}/../build-${presetName}"
    },
    {
      "name": "ci-preset-build-dir",
      "hidden": true,
      "description": "CI uses a child directory for the build based on the preset name",
      "binaryDir": "${sourceDir}/build-${presetName}"
    },
    {
      "name": "compile-commands",
      "hidden": true,
      "description": "Generate a compile_commands.json database",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "no-testing",
      "hidden": true,
      "description": "Turn off building of tests",
      "cacheVariables": {
        "BUILD_TESTING": false
      }
    },
    {
      "name": "vcpkg",
      "hidden": true,
      "description": "Configure the toolchain for vcpkg",
      "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
    },
    {
      "name": "debug-config",
      "hidden": true,
      "description": "Configure for Debug build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-config",
      "hidden": true,
      "description": "Configure for Release build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "run-slow-tests",
      "hidden": true,
      "description": "Configure to enable slow tests",
      "cacheVariables": {
        "ID_RUN_SLOW_TESTS": true
      }
    },
    {
      "name": "default",
      "displayName": "Configure with default settings",
      "inherits": [ "sibling-preset-build-dir", "project-name-preset", "vcpkg" ]
    },
    {
      "name": "use-wx",
      "hidden": true,
      "displayName": "Configure for use of wxWidgets",
      "inherits": [ "project-name-preset", "vcpkg" ],
      "cacheVariables": {
        "ID_USE_WX": true,
        "VCPKG_MANIFEST_FEATURES": "wx"
      }
    },
    {
      "name": "debug",
      "displayName": "Configure with Debug settings",
      "inherits": [ "default", "debug-config" ]
    },
    {
      "name": "release",
      "displayName": "Configure with Release settings",
      "inherits": [ "default", "release-config" ]
    },
    {
      "name": "wx",
      "displayName": "Configure with wxWidgets settings",
      "inherits": [ "sibling-preset-build-dir", "use-wx" ]
    },
    {
      "name": "ci-debug",
      "displayName": "CI Configure with Debug settings",
      "inherits": [ "ci-preset-build-dir", "default", "debug-config", "run-slow-tests" ]
    },
    {
      "name": "ci-release",
      "displayName": "CI Configure with Release settings",
      "inherits": [ "ci-preset-build-dir", "default", "release-config", "run-slow-tests" ]
    },
    {
      "name": "ci-wx-debug",
      "displayName": "CI Configure with wxWidgets Debug settings",
      "inherits": [ "ci-preset-build-dir", "use-wx", "debug-config", "run-slow-tests" ]
    },
    {
      "name": "ci-wx-release",
      "displayName": "CI Configure with wxWidgets Release settings",
      "inherits": [ "ci-preset-build-dir", "use-wx", "release-config", "run-slow-tests" ]
    },
    {
      "name": "feature-hc",
      "hidden": true,
      "displayName": "Configure for help compiler feature",
      "cacheVariables": {
        "VCPKG_MANIFEST_FEATURES": "hc",
        "VCPKG_MANIFEST_NO_DEFAULT_FEATURES": true
      }
    },
    {
      "name": "ci-html-docs",
      "displayName": "CI Configure HTML docs with Release settings for HTML",
      "inherits": [ "ci-preset-build-dir", "no-testing", "feature-hc", "release-config", "default" ]
    },
    {
      "name": "cppcheck",
      "displayName": "Configure for use with cppcheck",
      "inherits": [ "sibling-preset-build-dir", "compile-commands", "no-testing", "vcpkg" ]
    },
    {
      "name": "hc",
      "displayName": "Configure help compiler for generating docs",
      "inherits": [ "sibling-preset-build-dir", "no-testing", "feature-hc", "release-config", "vcpkg" ]
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "displayName": "Build with default settings",
      "configurePreset": "default"
    },
    {
      "name": "wx",
      "displayName": "Build with wxWidgets settings",
      "configurePreset": "wx"
    },
    {
      "name": "hc",
      "displayName": "Build with help compiler settings",
      "configurePreset": "hc"
    },
    {
      "name": "debug",
      "displayName": "Build with Debug settings",
      "configurePreset": "debug",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "displayName": "Build with Release settings",
      "configurePreset": "release",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "ci-debug",
      "displayName": "CI Build with Debug settings",
      "configurePreset": "ci-debug",
      "configuration": "Debug"
    },
    {
      "name": "ci-release",
      "displayName": "CI Build with Release settings",
      "configurePreset": "ci-release",
      "configuration": "RelWithDebInfo",
      "targets": [ "package" ]
    },
    {
      "name": "ci-wx-debug",
      "displayName": "CI Build with wxWidgets Debug settings",
      "configurePreset": "ci-wx-debug",
      "configuration": "Debug"
    },
    {
      "name": "ci-wx-release",
      "displayName": "CI Build with wxWidgets Release settings",
      "configurePreset": "ci-wx-release",
      "configuration": "RelWithDebInfo",
      "targets": [ "package" ]
    },
    {
      "name": "ci-html-docs",
      "displayName": "CI Build HTML docs with Release settings",
      "configurePreset": "ci-html-docs",
      "configuration": "Release",
      "targets": "ascii-doc"
    }
  ],
  "testPresets": [
    {
      "name": "jobs-20",
      "hidden": true,
      "displayName": "Use 20 parallel test jobs",
      "execution": {
        "jobs": 20
      },
      "condition": {
        "lhs": "$env{NUMBER_OF_PROCESSORS}",
        "type": "equals",
        "rhs": "20"
      }
    },
    {
      "name": "jobs",
      "hidden": true,
      "inherits": [ "jobs-20" ]
    },
    {
      "name": "settings",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 4
      }
    },
    {
      "name": "filter-tests",
      "hidden": true,
      "filter": {
        "exclude": {
          "label": "image|colormap|orbit|raytrace"
        }
      }
    },
    {
      "name": "default",
      "displayName": "Test with default settings",
      "inherits": [ "settings" ],
      "configurePreset": "default",
      "configuration": "Debug"
    },
    {
      "name": "wx",
      "displayName": "Test with wxWidgets settings",
      "inherits": [ "settings", "filter-tests" ],
      "configurePreset": "wx",
      "configuration": "Debug"
    },
    {
      "name": "debug",
      "displayName": "Test with Debug settings",
      "inherits": [ "settings" ],
      "configurePreset": "debug",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "displayName": "Test with Release settings",
      "inherits": [ "settings" ],
      "configurePreset": "release",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "ci-debug",
      "displayName": "CI Test with Debug settings",
      "inherits": [ "settings" ],
      "configurePreset": "ci-debug",
      "configuration": "Debug"
    },
    {
      "name": "ci-release",
      "displayName": "CI Test with Release settings",
      "inherits": [ "settings" ],
      "configurePreset": "ci-release",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "ci-wx-debug",
      "displayName": "CI Test with wxWidgets Debug settings",
      "inherits": [ "settings", "filter-tests" ],
      "configurePreset": "ci-wx-debug",
      "configuration": "Debug"
    },
    {
      "name": "ci-wx-release",
      "displayName": "CI Test with wxWidgets Release settings",
      "inherits": [ "settings", "filter-tests" ],
      "configurePreset": "ci-wx-release",
      "configuration": "RelWithDebInfo"
    }
  ],
  "packagePresets": [
    {
      "name": "debug",
      "displayName": "Package debug build",
      "configurePreset": "debug",
      "configurations": [ "Debug" ]
    },
    {
      "name": "wx",
      "displayName": "Package wxWidgets build",
      "configurePreset": "wx",
